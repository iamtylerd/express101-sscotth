extends layout
block content
	.container.text-center
		h1 Contact Us
		.formDiv.col-sm-12
			form(method='POST')
				.form-group
					label(for='name') Name
					input.form-control#name(type="text" name='name' placeholder="Name")/
				.form-group
					label(for='email') Email
					input.form-control#email(type="email" name='email' placeholder="Email")/
				.form-group
					label(for='phone') Phone
					input.form-control#phone(type="tel" name='phone' placeholder="Phone")/
				.form-group
					label(for='info') Enter your question
					textarea.form-control#message(rows="4" name='message')
				.form-group.btn
					button(type="submit") Submit
