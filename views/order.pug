extends layout
block content
	.container.text-center
		h1 Order
		.formDiv.col-sm-12
			form(method='POST')
				.form-group
					label(for='name') Name
					input.form-control#name(type="text" name='name' placeholder="Name")/
				.form-group
					label(for='email') Email
					input.form-control#email(type="email" name='email' placeholder="Email")/
				.form-group
					label(for='phone') Phone
					input.form-control#phone(type="tel" name='phone' placeholder="Phone")/
				.form-group
					label(for='size') Size
					select.form-control#size(name='size')
						option
						option(value='10') Small 10"
						option(value='12') Medium 12"
						option(value='14') Large 14"
						option(value='1776') Murica 1776"
				.form-group.btn
					button(type="submit") Submit
